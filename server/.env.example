# ==========================================
# 🔥 环境变量配置文件
# ==========================================
# 复制此文件为 .env 并填入实际值

# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_CONNECTION_LIMIT=10

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-please-change-this-in-production-use-random-string
JWT_EXPIRES_IN=7d

# CORS 配置（允许的前端域名，用逗号分隔）
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# 日志配置
LOG_LEVEL=info

# 文件上传配置
MAX_FILE_SIZE=10485760